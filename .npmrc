# pnpm configuration

# Use node-linker=hoisted for better compatibility with tools that expect traditional node_modules
node-linker=hoisted

# Strict peer dependencies (fail on peer dep issues)
strict-peer-dependencies=true

# Auto install peers (helpful for React ecosystem)
auto-install-peers=true

# Use lockfile version 6.0 (latest)
lockfile=true

# Don't hoist these patterns (better isolation)
public-hoist-pattern[]='*types*'
public-hoist-pattern[]='*eslint*'
public-hoist-pattern[]='@typescript-eslint/*'

# Shamefully hoist for compatibility if needed
# shamefully-hoist=true

# Use frozen lockfile in CI
# frozen-lockfile=true

# Network timeout for slow connections
network-timeout=60000

# Prefer offline (use cache when possible)
prefer-offline=true

# Store directory (optional, defaults to ~/.pnpm-store)
# store-dir=~/.pnpm-store